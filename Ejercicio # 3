import os
var_controlBln = True
while var_controlBln == True:
    
    opcionStr =  input('\nQue deseas realizar:\nC. Convertir de grados Centígrados a Fahrenheit.\nF. Convertir de Fahrenheit a grados centigrados\nX. Finalizar\n--> ')
    if opcionStr == 'x' or  opcionStr == 'X':
        var_controlBln = False
    if opcionStr == 'c'  or opcionStr == 'C':
        gradoCInt = int(input("\nIngresa el valor en grados centígrados\n--> "))
        solucionFlt = float(gradoCInt *9/5) + 32
        print ('\nLos grados Fahrenheit son ', solucionFlt )

    if opcionStr == 'f'  or opcionStr == 'F':
        gradoFInt = int(input('\nIngresa el valor en Fahrenheit\n--> '))
        solucionFlt = float(gradoFInt -32) * 5/9
        print ('Los grados Centigrados son ',solucionFlt)

print('\nPrograma finalizado')
